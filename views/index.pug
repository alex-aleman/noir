      form(id="form" method="get" autocomplete="off")
        input(id="search" type="text" name="q" placeholder="-u | -h | -4 | -3 | -g" autofocus="autofocus")
    div(class="media")
      video(id="video" autoplay="autoplay" loop="loop")
        source(src="vid.webm" type="video/webm")